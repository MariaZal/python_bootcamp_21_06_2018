import sys

file = sys.argv[1]

try:
    with open(file, encoding='UTF-8') as f:
        i = 1
        for line in f:
            print(i, ": ", line, end="", sep="")
            i += 1
except FileNotFoundError:
    print("Nie znaleziono takiego pliku")

